<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans.xsd
          http://www.springframework.org/schema/mvc
          http://www.springframework.org/schema/mvc/spring-mvc.xsd
          http://www.springframework.org/schema/tx
          http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
          http://www.springframework.org/schema/context
          http://www.springframework.org/schema/context/spring-context.xsd
          http://www.springframework.org/schema/aop
          http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

    <!-- Bean definitions go here -->
    <bean id="orderDao"
          class="com.zakharovakr.flooringmastery.dao.OrderDaoFileImpl"/>

    <bean id="taxDaoStub"
          class="com.zakharovakr.flooringmastery.dao.TaxDaoStabImpl"/>

    <bean id="productDaoStub"
          class="com.zakharovakr.flooringmastery.dao.ProductDaoStabImpl"/>

    <bean id="orderDaoStub"
          class="com.zakharovakr.flooringmastery.dao.OrderDaoStubImpl"/>

    <bean id="exportDaoStub"
          class="com.zakharovakr.flooringmastery.dao.ExportDaoStubImpl"/>

    <bean id="auditDaoStub"
          class="com.zakharovakr.flooringmastery.dao.FlooringAuditDaoStubImpl"/>

    <bean id="serviceLayer"
          class="com.zakharovakr.flooringmastery.service.FlooringServiceLayerImpl">
        <constructor-arg ref="taxDaoStub"/>
        <constructor-arg ref="productDaoStub"/>
        <constructor-arg ref="orderDaoStub"/>
        <constructor-arg ref="exportDaoStub"/>
        <constructor-arg ref="auditDaoStub"/>
    </bean>
</beans>